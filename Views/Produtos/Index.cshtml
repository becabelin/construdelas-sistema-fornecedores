@model IEnumerable<MVC_Completo.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
    Layout = "_Layout";
}

<h1>Produtos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar Produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label for="model.Nome">Nome</label>
            </th>
            <th>
                <label for="model.Descricao">Descrição</label>
            </th>
            <th>
                <label for="model.Valor">Valor</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>